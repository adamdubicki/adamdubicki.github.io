---
import "../styles/global.css";
import Sidebar from "../components/navigation/Sidebar.astro";
import Header from "../components/navigation/Header.astro";
import ThemeIcon from "../components/ThemeIcon.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-PFP7L8Q");
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Adam Dubicki is a full stack software developer living in Victoria BC."
    />

    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap"
      />
    </noscript>
    <title>Adam Dubicki | Full Stack Developer</title>
  </head>
  <header class="header">
    <Header />
  </header>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-PFP7L8Q"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <main class="container">
      <aside class="sidebar">
        <Sidebar />
      </aside>
      <div class="divider" aria-hidden="true"></div>
      <article class="main">
        <slot />
      </article>
    </main>
  </body>
  <ThemeIcon />

  <style>
    .container {
      display: flex;
      max-width: 1000px;
      margin: 0 auto;
      padding: 48px 24px;
      gap: 40px;
      align-items: stretch;
    }

    .divider {
      border-left: 2px dotted var(--link-color);
    }
    .main {
      flex: 1;
      min-width: 0;
    }

    @media (max-width: 712px) {
      .sidebar,
      .divider {
        display: none;
      }

      .container {
        margin-top: 48px;
      }
    }

    @media (min-width: 712px) {
      .header {
        display: none;
      }
    }
  </style>


</html>
