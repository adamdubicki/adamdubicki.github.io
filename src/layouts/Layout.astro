---
import logo from "../assets/adam-dithered-240x240.png";
import ThemeIcon from "../components/ThemeIcon.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <title>Adam Dubicki | Full Stack Developer</title>
  </head>
  <body>
    <main class="container">
      <aside class="sidebar">
        <img
          width={240}
          height={240}
          src={logo.src}
          alt="Adam Dubicki Headshot"
        />
        <span>Adam Dubicki<ThemeIcon /></span>
        <p>Full Stack Software Developer</p>
        <nav class="sidebar__nav">
          <a href="/#about-me">About Me</a>
          <a href="/#skills">Skills</a>
          <a href="/#projects">Projects</a>
          <a href="/#experience">Experience</a>
          <a href="/#contact">Contact</a>
          <hr />
          <a href="/books-i-have-read">Books I Have Read</a>
        </nav>
      </aside>
      <div class="divider" aria-hidden="true"></div>
      <article class="main">
        <slot />
      </article>
    </main>
  </body>
</html>

<style>
  .container {
    display: flex;
    max-width: 1000px;
    margin: 0 auto;
    padding: 48px 24px;
    gap: 40px;
    align-items: stretch;
  }

  .divider {
    width: 1px;
    border-left: 2px dotted var(--text-color);
  }

  .sidebar {
    flex: 0 0 216px;
    position: sticky;
    top: 24px;
    height: fit-content;
  }

  .sidebar__nav {
    display: flex;
    flex-direction: column;
  }

  .main {
    flex: 1;
    min-width: 0;
  }
</style>
